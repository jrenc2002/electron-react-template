{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "src/renderer/src"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@renderer/*": ["src/renderer/src/*"],
      "@base/*": ["src/*"]
    },
    "jsx": "react-jsx",
    // 添加这一行
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
